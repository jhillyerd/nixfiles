#! /usr/bin/env nix-shell
#! nix-shell -i fish -p chezmoi fish git neovim
#
# setup-home

function stage -a message
  set_color brcyan
  echo "##" $message
  set_color normal
end

set CHEZMOI $HOME/.local/share/chezmoi
set VIM $HOME/.vim

stage "Setup"
cd $HOME
mkdir -p .local/share devel

stage "Cloning configs"
git clone https://github.com/jhillyerd/dotfiles $CHEZMOI
git clone https://github.com/jhillyerd/dotvim $VIM

stage "Chezmoi"
chmod 0700 $CHEZMOI
chezmoi apply

stage "Neovim"
mkdir -p "$VIM"
curl -fLo "$VIM/autoload/plug.vim" \
  "https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
nvim +PlugInstall +qall

stage "Oh My Fish"
curl -L https://get.oh-my.fish | fish

# vim:ft=fish
